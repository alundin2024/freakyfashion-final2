<!DOCTYPE html>
<html lang="sv">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%=title%></title>
    <link rel="stylesheet" href="/stylesheets/style,products.css" />
    <link rel="stylesheet" href="/stylesheets/magnifier.css" />
  </head>
  <body>
    <header>
      <section class="header">
        <div class="mainlogoContainer">
          <a href="/"
            ><img
              class="mainlogo"
              src="/images/freakyfashion,mainlogo.webp"
              alt="Logotyp"
          /></a>
        </div>
        <div class="searchContainer">
          <div class="searchbar">
            <br />
            <input
              class="mainLoginInput"
              type="text"
              placeholder="&#61442; Sök produkt"
            />
          </div>
          <div class="headerIcons">
            <a href=""
              ><img
                class="header-heart"
                src="/icons/heart-fill.svg "
                alt="Heart Icon"
            /></a>
            <a href=""
              ><img
                class="basket"
                src="/icons/basket2-fill.svg"
                alt="Basket Icon"
            /></a>
          </div>
        </div>
      </section>
    </header>

    <main>
      <section class="topmenu">
        <nav aria-label="primary-navigation">
          <a href="#about" class="topmenuFontDesign">Nyheter</a>
          <br />
          <a href="#menu" class="topmenuFontDesign">Topplistan</a>
          <br />
          <a href="hours.html" class="topmenuFontDesign">Rea</a>
          <br />
          <a href="contact.html" class="topmenuFontDesign">Kampanjer</a>
        </nav>
      </section>

      <section class="productsDetails">
        <div class="detailProducts">
          <div class="product">
            
            <% if (product.image) { %>
            <img src="<%= product.image %>" alt="<%= product.title %>" />
            <% } %>
            
            <img
              src="<%= product.isLiked ? '/icons/heart-fill.svg' : '/icons/heart.svg' %>"
              alt="Like"
              class="heart heartProduct <%= product.isLiked ? 'heart-filled' : '' %>"
            />
            <div class ="productDetailsText">     
            <h2><%= product.name %></h2>
            <p><%= product.brand %></p>
            <p><%= product.lorem %></p>
            <p><%= product.price %></p>
              
            <button class="button buttonDetails" type="button">
              Lägg i varukorg
            </button>
          </div>
          </div>
        </div>
      </section>
      <div class ="h2Top"><h2 style="text-align: center">Liknande produkter</h2></div>
      <section class="liknandeProdukter">
       
        
        <div class="spotsDetails">x
          <section class="products">
            <% products.forEach(product => { %>
            <div class="first-product-shown other-products">
              <a href="/products/<%= product.slug %>">
                <% if (product.image) { %>
                <img
                  src="<%= product.image %>"
                  alt="<%= product.title %>"  
                  class="productsFirstPage"
                />
                <% } %>
                
                <div class="prisProducts"><%= product.price %> kr</div>
                
                <% if (product.isNew) { %>
                <div class="nyhet">
                  <div class="nyhetBox">Nyhet</div>
                </div>
                <% } %>
                
               
              </a>
              
              <div class="productInfo">
                <h2><%= product.name %></h2>
                <p><%= product.brand %></p>
              </div>
            </div>
            <% }) %>
          </section>
        </div>
      </section>

      <section class="info">
        <div class="more-info">
          <img id="earth" src="/icons/earth.svg" alt="Jordklot" />
          <p class="frakt">Gratis frakt och returer</p>
        </div>

        <div class="more-info">
          <img id="airplane" src="/icons/airplane.svg" alt="Flygplan" />
          <p>Expressfrakt</p>
        </div>

        <div class="more-info">
          <img id="shield" src="/icons/shield.svg" alt="Sköld" />
          <p>Säkra betalningar</p>
        </div>

        <div class="more-info">
          <img id="smile" src="/icons/emoji,smile.svg" alt="Smiley" />
          <p>Nyheter varje dag</p>
        </div>
      </section>
    </main>

    <footer>
      <div>
        <div class="wideFooter">
          <div class="wideFooterShopping">
            <h4>Shopping</h4>
            <a href="">Vinterjackor</a>
            <a href="">Pufferjackor</a>
            <a href=""> Kappa </a>
            <a href="">Trenchcoats</a>
          </div>
          <div class="wideFooterMinaSidor">
            <h4>Shopping</h4>
            <a href="">Vinterjackor</a>
            <a href="">Pufferjackor</a>
            <a href=""> Kappa </a>
            <a href="">Trenchcoats</a>
          </div>
          <div class="wideFooterKundtjänst">
            <h4>Kundtjänst</h4>
            <a href="">Returnpolicy</a>
            <a href="">Integritetspolicy</a>
            <a href=""></a>
            <a href=""></a>
          </div>
        </div>
        <div style="text-align: center" class="copyright">
          &copy; Freaky Fashion
        </div>
      </div>

      <div class="detailsFooter">
        <details>
          <summary class="shopping bold">Shopping</summary>

          <a href="" class="menuItem">Vinterjackor</a>

          <a href="" class="menuItem">Pufferjackor</a>

          <a href="" class="menuItem">Kappa</a>

          <a href="" class="menuItem">Trenchcoats</a>
        </details>
        <details>
          <summary class="minasidor bold">Mina Sidor</summary>
          <a href="" class="menuItem">Mina Ordrar</a>

          <a href="" class="menuItem">Mitt Konto</a>
        </details>
        <details>
          <summary class="kundtjanst bold">Kundtjänst</summary>
          <a href="" class="menuItem">Returnpolicy</a>

          <a href="" class="menuItem">Integritetspolicy</a>
        </details>
        <div style="text-align: center" class="copyrightDetails">
          &copy; Freaky Fashion
        </div>
      </div>
    </footer>
  </body>
</html>